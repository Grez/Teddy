{block content}
    <h1>{$forum->getName()}</h1>

    {if $forum->canWrite($user)}
        {control newPostForm}
    {else}
        <p>You can't post here</p>
    {/if}

    <div n:foreach="$forum->getPosts() as $post">
        <a>{$post->getAuthor()->getNick()}</a>
        <span>{$post->getDate()|date:'d.m.Y H:i:s'}</span>
        <p>{$post->getText()}</p>
    </div>
{/block}